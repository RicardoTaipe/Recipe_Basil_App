<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Recipe_Basil_App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bottle_green</item>
        <item name="colorOnPrimary">@color/bottle_green</item>
        <item name="colorOnTertiary">@color/red_orange</item>
        <item name="colorPrimaryDark">@color/green_cyan</item>
        <item name="colorPrimaryVariant">@color/turquoise_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_orange</item>
        <item name="colorSecondaryVariant">@color/cosmic_latte</item>
        <item name="colorOnSecondary">@color/bottle_green</item>

        <item name="colorSurface">@color/cosmic_latte</item>
        <item name="colorOnSurface">@color/bottle_green</item>

        <item name="android:colorBackground">@color/cosmic_latte</item>
        <item name="colorOnBackground">@color/bottle_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/egg_shell</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Fonts-->
        <item name="fontFamily">@font/lekton</item>
        <item name="android:fontFamily">@font/lekton</item>
    </style>
</resources>
